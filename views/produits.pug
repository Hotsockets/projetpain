extends layout
//- res.render('produits', {products:results});

mixin 1produit(product)
  img.lightBox(alt= product.name, src='images/'+ product.picture)
  p= product.name
  
mixin paquet2(n)
  .paquet2
    .prod
      +1produit(products[n])
    .prod
      +1produit(products[n+1])

mixin row(n)
  .row
    +paquet2(n)
    +paquet2(n+2)

block content
  .parallax
  .container-fluid
    .row
      .prod-top
        +1produit(products[0])
      .row1
        +row(1)
  +row(5)
