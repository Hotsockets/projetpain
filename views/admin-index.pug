table(border="1" width="100%")
	tr
		th #
		th name 
		th description
		th price
		th image
		th action
	each product in products
		tr
			td= product.id
			td= product.name
			td= product.description  
			td= product.price
			td 
				img(src="/images/" + product.picture height="50")
			td 
				a(href="/admin/delete-product?id=" + product.id) Supprimer